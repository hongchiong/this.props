<p id="notice"><%= notice %></p>

<div id="map"></div>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Price</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Floor area</th>
      <th>Furnishing</th>
      <th>Floor levels</th>
      <th>Lease left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.location %></td>
        <td><%= house.price %></td>
        <td><%= house.bedrooms %></td>
        <td><%= house.bathrooms %></td>
        <td><%= house.floor_area %></td>
        <td><%= house.furnishing %></td>
        <td><%= house.floor_levels %></td>
        <td><%= house.lease_left %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path %>


<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAbNZbA1zSBKlFa3vbZytmqJzkEbaiSMEU&callback=initMap">
</script>